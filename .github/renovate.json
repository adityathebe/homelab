{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":timezone(Asia/Kathmandu)",
    "github>adityathebe/homelab//.github/renovate/grafanaDashboards.json",
    "github>adityathebe/homelab//.github/renovate/groups.json",
    "github>adityathebe/homelab//.github/renovate/commitMessage.json",
    "github>adityathebe/homelab//.github/renovate/labels.json"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process custom dependencies",
      "managerFilePatterns": [
        "/\\.ya?ml$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\n.*?\"(?<currentValue>.*)\"\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
